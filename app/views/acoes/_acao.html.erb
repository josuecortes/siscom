<tr id="row_acao_<%= acao.id %>">
  <td><%= acao.nome %></td>
  <td><%= acao.inicio&.strftime("%d/%m/%Y") %></td>
  <td><%= acao.termino&.strftime("%d/%m/%Y") %></td>
  <td><%= acao.status %></td>
  <td><%= acao.user&.nome %></td>
  <td>
    <%= link_to acao, class: "btn btn-sm btn-default", title: "Ver", remote: true  do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_acao_path(acao), class: "btn btn-sm btn-primary", title: "Editar", remote: true  do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to acao, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger", title: "Excluir"  do %>
      <i class="fas fa-trash"></i>
    <% end %>
    <%= link_to acao_etapas_path(acao), class: "btn btn-sm btn-success", title: "Etapas"  do %>
      <i class="fa fa-chart-pie"></i> Etapas (<%= acao.etapas.count %>)
    <% end %>
    <%= link_to relatorio_acao_path(acao), class: "btn btn-sm btn-default", title: "RÃ©latorio", target: "_blank"  do %>
      <i class="fas fa-file"></i>
    <% end %>
  </td>
</tr>
