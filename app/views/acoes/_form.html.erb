<div class="modal-body">

  <%= form_for @acao, remote: true do |f| %>
    
    <% if @acao.errors.any? %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-ban"></i> Ops! Algo deu errado.</h5>
      </div>
    <% end %>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :status, value: 1 %>
    <%= f.hidden_field :mostrar_no_site, value: false %>

    <div class="form-group">
      <%= f.label :nome %>
      <%= f.text_field :nome, autofocus: true, autocomplete: "Nome", class: "form-control", required: true %>
      <%= has_error(@acao, :nome) %>
    </div>

    <div class="form-group">
      <%= f.label :motivacao %>
      <%= f.text_area :motivacao, class: "form-control", required: true %>
      <%= has_error(@acao, :motivacao) %>
    </div>

    <div class="form-group">
      <%= f.label :inicio, "Data Início" %>
      <%= f.date_field :inicio, class: "form-control", required: true %>
      <%= has_error(@acao, :inicio) %>
    </div>

    <div class="form-group">
      <%= f.label :termino, "Data Fim" %>
      <%= f.date_field :termino, class: "form-control", required: true %>
      <%= has_error(@acao, :termino) %>
    </div>

    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, @status, { include_blank: "Selecione um status" }, { class: "form-control", required: true } %>
      <%= has_error(@acao, :status) %>
    </div>

    <div class="modal-footer">
      <button type="submit" class="btn btn-success" data-disable-with="Salvar"><i class="icon fa fa-check"></i> Salvar</button>
      <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="icon fas fa-ban"></i> Cancelar</button>
    </div>

  <% end %>

</div>

