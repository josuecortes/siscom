<div class="modal-body">

  <%= form_for @departamento, remote: true do |f| %>
    
    <% if @departamento.errors.any? %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-ban"></i> Ops! Algo deu errado.</h5>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :nome %>
      <%= f.text_field :nome, autofocus: true, autocomplete: "Nome", placeholder: "Digite o nome da função", class: "form-control", required: true %>
      <%= has_error(@departamento, :nome) %>
    </div>

    <div class="form-group">
      <%= f.label :sigla %>
      <%= f.text_field :sigla, autocomplete: "Sigla", placeholder: "Digite a sigla do departamento", class: "form-control", required: true %>
      <%= has_error(@departamento, :sigla) %>
    </div>
    
    <div class="modal-footer">
      <button type="submit" class="btn btn-success" data-disable-with="Salvar"><i class="icon fa fa-check"></i> Salvar</button>
      <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="icon fas fa-ban"></i> Cancelar</button>
    </div>

  <% end %>    

</div>




