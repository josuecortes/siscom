<% content_for :title do %>
  <i class="fa fa-users"></i> Destinos
<% end %>
<% content_for :breadcrumb do %>
  <li class="breadcrumb-item active"><a href="<%= destinos_url %>">Destinos</a></li>
<% end %>
<% content_for :sub_title do %>
  Lista de Destinos
<% end %>
<% content_for :buttons do %>
  <%= link_to new_destino_path, class: "btn btn-sm btn-success", title: "Novo Destino", remote: true do %>
    <i class="fas fa-plus"></i> Novo
  <% end %>
<% end %>

<table id="data-table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Descricao</th>
      <th>Cep</th>
      <th>Numero</th>
      <th>Cidade</th>
      <th>Bairro</th>
      <th>Logradouro</th>
      <th>Requisicao transporte</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="data-table-body">
    <% @destinos.each do |destino| %>
      <tr>
        <td><%= destino.tipo %></td>
        <td><%= destino.descricao %></td>
        <td><%= destino.cep %></td>
        <td><%= destino.numero %></td>
        <td><%= destino.cidade %></td>
        <td><%= destino.bairro %></td>
        <td><%= destino.logradouro %></td>
        <td><%= destino.requisicao_transporte_id %></td>
        <td><%= destino.user_id %></td>
        <td>
          <%= link_to destino_path(destino), class: "btn btn-sm btn-default", title: "Ver"  do %>
            <i class="fas fa-eye"></i>
          <% end %>
          <%= link_to edit_destino_path(destino), class: "btn btn-sm btn-primary", title: "Editar", remote: true  do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to destino_path(destino), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger", title: "Excluir"  do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr> 
    <% end %>
  </tbody>
</table>