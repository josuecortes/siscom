<tr id="row_etapa_<%= etapa.id %>">
  <td><%= etapa.nome %></td>
  <td><%= etapa.inicio&.strftime("%d/%m/%Y") %></td>
  <td><%= etapa.termino&.strftime("%d/%m/%Y") %></td>
  <td>
    <% etapa.etapa_users.each do |eu| %>
      <%= eu.user&.nome&.split&.first %> |
    <% end %>
  </td>
  <td><%= etapa.status %></td>
  <td>
    <%= link_to acao_etapa_path(@acao, etapa), class: "btn btn-sm btn-default", title: "Ver"  do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_acao_etapa_path(@acao, etapa), class: "btn btn-sm btn-primary", title: "Editar", remote: true  do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to acao_etapa_path(@acao, etapa), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger", title: "Excluir", remote: true  do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
