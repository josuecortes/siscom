<div class="card-tools">
  <%= form_tag(funcoes_path, role: "search", method: :get, remote: true) do %>
    <div class="input-group input-group-sm" style="width: 350px;">
      <%= text_field_tag :term, params[:term], class: "form-control", placeholder: "Localizar..", class: "form-control float-right" %>
      <div class="input-group-append">
        <button type="submit" class="btn btn-default">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </div>
  <% end %>
</div>