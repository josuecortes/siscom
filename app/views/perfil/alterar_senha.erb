<% content_for :title do %>
  Alterar Senha
<% end %>
<% content_for :breadcrumb do %>
  <li class="breadcrumb-item active"><a href="<%= perfil_alterar_senha_url %>">Alterar Senha</a></li>
<% end %>
<% content_for :sub_title do %>
  Alterar senha de <%= @usuario.nome.split.first %>
<% end %>
<% content_for :buttons do %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">        

        <%= form_for @usuario, url: perfil_salvar_senha_path(@usuario), method: :put do |f| %>
          
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :current_password, 'Senha Atual', class: "form-label" %>
            </div>  
            <div class="col-sm-10">
              <%= f.password_field :current_password, placeholder: "Digite a senha atual", class: "form-control", required: true %>
              <%= has_error(@usuario, :current_password) %>
            </div>  
          </div>

          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :password, 'Nova Senha', class: "form-label" %>
            </div>  
            <div class="col-sm-10">
              <%= f.password_field :password, placeholder: "Digite a nova senha", class: "form-control", required: true %>
              <%= has_error(@usuario, :password) %>
            </div>  
          </div>

          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :password_confirmation, 'Confirme a nova senha', class: "form-label" %>
            </div>  
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, placeholder: "Confirme a nova senha", class: "form-control", required: true %>
              <%= has_error(@usuario, :password_confirmation) %>
            </div>  
          </div>
          
          <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
              <button type="submit" class="btn btn-danger">Atualizar</button>
            </div>
          </div>
        
        <% end %>
        
      </div>
    </div>
  </div>
</div>
