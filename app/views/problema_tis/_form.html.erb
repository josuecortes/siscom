<div class="modal-body">

  <%= form_for @problema_ti, remote: true do |f| %>
    
    <% if @problema_ti.errors.any? %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-ban"></i> Ops! Algo deu errado.</h5>
      </div>
    <% end %>


    <div class="form-group">
      <%= f.label :nome %>
      <%= f.text_field :nome, autofocus: true, autocomplete: "Nome", placeholder: "Digite o nome da função", class: "form-control", required: true %>
      <%= has_error(@problema_ti, :nome) %>
    </div>

    <div class="form-group">
      <%= f.label :descricao, "Descrição" %>
      <%= f.text_field :descricao, autofocus: true, autocomplete: "Descrição", placeholder: "Digite a descrição do problema", class: "form-control", required: true %>
      <%= has_error(@problema_ti, :descricao) %>
    </div>

    <div class="form-group">
      <%= f.label :tipo_problema_ti_id, "Tipo de Problema" %>
      <%= f.select :tipo_problema_ti_id, @tipo_problemas, { include_blank: true }, { class: "form-control js-searchable", required: true } %>  
      <%= has_error(@problema_ti, :tipo_problema_ti_id) %>
    </div>
    
    <div class="modal-footer">
      <button type="submit" class="btn btn-success" data-disable-with="Salvar"><i class="icon fa fa-check"></i> Salvar</button>
      <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="icon fas fa-ban"></i> Cancelar</button>
    </div>

  <% end %>    

</div>


