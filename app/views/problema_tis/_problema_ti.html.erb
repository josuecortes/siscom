<tr>
  <td><%= problema_ti.nome %></td>
  <td><%= problema_ti.tipo_problema_ti.nome if problema_ti.tipo_problema_ti %></td>
  <td>
    <%= link_to problema_ti, class: "btn btn-sm btn-default", title: "Ver"  do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_problema_ti_path(problema_ti), class: "btn btn-sm btn-primary", title: "Editar", remote: true  do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to problema_ti, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger", title: "Excluir"  do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr> 