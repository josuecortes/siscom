<div class="nested-fields">

  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <div class="row">
    <div class="form-group col-lg-5">
      <%= f.label :descricao %>
      <%= f.text_field :descricao, class: "form-control", required: true %>
    </div>

    <div class="form-group col-lg-3">
      <%= f.label :cep %>
      <%= f.text_field :cep, class: "form-control cep", required: true %>
    </div>

    <div class="form-group col-lg-2"> 
      <%= f.label :numero %>
      <%= f.text_field :numero, class: "form-control", required: true %>
    </div>
    <div class="form-group col-lg-2">
    <%= link_to_remove_association "Remover Destino", f, class: "btn btn-danger", style: "margin-top: 30px;" %>
    </div>
  </div>
</div>
