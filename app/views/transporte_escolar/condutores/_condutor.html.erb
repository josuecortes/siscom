<!-- app/views/transporte_escolar/condutores/_condutor.html.erb -->

<tr>
  <td><%= condutor.nome %></td>
  <td><%= condutor.cpf %></td>
  <td><%= condutor.tipo %></td>
  <td>
    <%= link_to condutor, class: "btn btn-sm btn-default", title: "Ver", remote: true do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_transporte_escolar_condutor_path(condutor), class: "btn btn-sm btn-primary", title: "Editar", remote: true  do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to condutor, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger", title: "Excluir"  do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>

