<% content_for :title do %>
  <i class="fa fa-info"></i> Escolas
<% end %>
<% content_for :breadcrumb do %>
  <li class="breadcrumb-item active"><a href="<%= transporte_escolar_escolas_url %>">Escolas</a></li>
<% end %>
<% content_for :sub_title do %>
  Lista de escolas
<% end %>
<% content_for :buttons do %>
  <%= link_to new_transporte_escolar_escola_path, class: "btn btn-sm btn-success", title: "Nova Escola", remote: true do %>
    <i class="fas fa-plus"></i> Nova
  <% end %>
<% end %>

<table id="data-table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nome</th>
      <th>Municipio</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody id="data-table-body">
    <%= render @escolas %>
  </tbody>
</table>