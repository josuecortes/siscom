<!-- app/views/transporte_escolar/transportadores/index.html.erb -->

<% content_for :title do %>
  <i class="fa fa-info"></i> Transportadores
<% end %>
<% content_for :breadcrumb do %>
  <li class="breadcrumb-item active"><a href="<%= transporte_escolar_transportadores_url %>">Transportadores</a></li>
<% end %>
<% content_for :sub_title do %>
  Lista de transportadores
<% end %>
<% content_for :buttons do %>
  <%= link_to new_transporte_escolar_transportador_path, class: "btn btn-sm btn-success", title: "Novo Transportador", remote: true do %>
    <i class="fas fa-plus"></i> Novo
  <% end %>
<% end %>

<table id="data-table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Nome/Razão Social</th>
      <th>CPF/CNPJ</th>
      <th>Município</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody id="data-table-body">
    <%= render @transportadores %>
  </tbody>
</table>
