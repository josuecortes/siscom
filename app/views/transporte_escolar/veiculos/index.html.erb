<!-- app/views/transporte_escolar/veiculos/index.html.erb -->

<% content_for :title do %>
  <i class="fa fa-car"></i> Veículos
<% end %>

<% content_for :breadcrumb do %>
  <li class="breadcrumb-item active"><a href="<%= transporte_escolar_veiculos_url %>">Veículos</a></li>
<% end %>

<% content_for :sub_title do %>
  Lista de veículos
<% end %>

<% content_for :buttons do %>
  <%= link_to new_transporte_escolar_veiculo_path, class: "btn btn-sm btn-success", title: "Novo Veículo", remote: true do %>
    <i class="fas fa-plus"></i> Novo
  <% end %>
<% end %>

<table id="data-table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Identificação</th>
      <th>Transportador</th>
      <th>Condutor</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody id="data-table-body">
    <%= render @veiculos %>
  </tbody>
</table>
