<tr>
  <td><%= unidade.nome %></td>
  <td><%= unidade.sigla %></td>
  <td><%= unidade.tipo_unidade.nome if unidade.tipo_unidade %></td>
  <td><%= unidade.users.count %></td>
  <td>
    <%= link_to unidade, class: "btn btn-sm btn-default", title: "Ver"  do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_unidade_path(unidade), class: "btn btn-sm btn-primary", title: "Editar", remote: true  do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to unidade, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger", title: "Excluir"  do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr> 
