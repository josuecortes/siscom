<div class="nested-fields">

  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <div class="form-group">
    <%= f.label :descricao %>
    <%= f.text_field :descricao, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :cep %>
    <%= f.text_field :cep, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :numero %>
    <%= f.text_field :numero, class: "form-control", required: true %>
  </div>
  
  <%= link_to_remove_association "Remover Destino", f, class: "btn btn-danger" %>
 
  <hr/> 
    
</div>
